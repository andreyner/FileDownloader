<Window x:Class="PSR_File_Downloader.UI.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DownloadWindow" Height="247" Width="531" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ResizeMode="NoResize">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="PrBarDownload" Grid.Row="1"/>
        <TextBox x:Name="txtboxFilename" Margin="0,14" TextWrapping="Wrap" Text="TextBox" Grid.Row="1" FontSize="16" VerticalContentAlignment="Center">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="btnstop" Content="Стоп" Margin="207,28,194,21" Grid.Row="2" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
